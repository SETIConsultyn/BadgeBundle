<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Ant\BadgeBundle\Entity\Badge" >

        <field name="name" column="name" type="text" />

        <field name="description" column="description" type="text" length="1024" nullable="false" />

        <field name="image" column="image" type="text" />
        
        <field name="count" column="count" type="integer" />
        

    </mapped-superclass>

</doctrine-mapping>